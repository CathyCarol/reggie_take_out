<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hh.reggie.mapper.UserMapper">
    <select id="getOne" parameterType="String" resultType="com.hh.reggie.entity.User">
        select * from user
        where phone = #{phone}
    </select>

    <insert id="save" parameterType="com.hh.reggie.entity.User">
        insert into user(phone,status)
        values(#{phone},#{status})
    </insert>

    <select id="getById" parameterType="java.lang.Long" resultType="com.hh.reggie.entity.User">
        select * from user
        where id = #{userId}
    </select>
</mapper>
