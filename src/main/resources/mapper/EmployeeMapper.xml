<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hh.reggie.mapper.EmployeeMapper">
    <select id="getUser" parameterType="String" resultType="com.hh.reggie.entity.Employee">
        select * from employee
        where username = #{username}
    </select>

    <insert id="save" parameterType="com.hh.reggie.entity.Employee">
        insert into employee(id,name,username,password,phone,sex,id_number)
        values(#{id},#{name},#{username},#{password},#{phone},#{sex},#{idNumber})
    </insert>


    <update id="updateById" parameterType="java.lang.Long">
        update employee
        set name = #{name},username = #{username},password = #{password},
            phone = #{phone},sex = #{sex},id_number = #{idNumber},
            status = #{status},
            where id = #{id}
    </update>

    <select id="getById" parameterType="java.lang.Long">
        select * from employee
        where id = #{id}
    </select>
</mapper>
